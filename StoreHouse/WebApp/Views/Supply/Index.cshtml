@model IEnumerable<WebApp.Services.SupplyViewModel>

@{
    ViewData["Title"] = "Supplies";
}

<h1>Supplies</h1>

<p>
    <a asp-action="Create">Create supply</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StorehouseAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SupplierName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalPrice)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StorehouseAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SupplierName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalPrice)
            </td>
            <td>
                    @Html.ActionLink("Edit", "Index", "ProductInSupply", new { supplyId = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { supplyId = item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
